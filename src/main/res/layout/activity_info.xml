<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grant.touristapp.InfoActivity"
    >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="369dp"
        android:layout_height="91dp"
        android:text="Tripper is your pocket guide and journal to the city of Edinburgh. You'll find all the places to be discovered and how to get to them. Document your trip by adding journal entries into your phone and look back on your amazing journey through this historic city."
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="101dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/textView9" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="369dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Attractions"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edinburgh Castle"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="235dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="375dp"
        android:layout_height="116dp"
        android:text="Situated at the top of the Royal mile on top of Castle Rock, Edinburgh Castle is the number one visitor attraction in Scotland and the msot iconic building in the city
Perched on top of an extinct volcano, the Castle offers beautiful views of the city. When inside you can explor some of the oldest and most important buildings of the city, including St Margaret's Chapel and The National War Memorial. You cna also observe the 1 o clock gun which goes off at 1pm everyday. "
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="370dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp" />

    <ImageView
        android:id="@+id/castleImage"
        android:layout_width="375dp"
        android:layout_height="112dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView11"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="259dp" />


</RelativeLayout>
